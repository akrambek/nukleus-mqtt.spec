connect await ROUTED_SERVER
        "nukleus://streams/mqtt#0"
  option nukleus:window 8192
  option nukleus:transmission "duplex"

connected

write [0x10 0x11]           # fixed header
      [0x00 0x04] "MQTT"    # protocol name
      [0x05]                # protocol version
      [0x02]                # connect flags = clean start
      [0x00 0x3c]           # keep alive = 60s
      [0x00]                # properties = none
      [0x00 0x04] "abcd"    # clientId

read [0x20 0x02]            # fixed header
     [0x00]                 # connect flags = none
     [0x00]                 # reason code

write [0x82 0x0B]           # fixed header
      [0x00 0x01 0x00]      # packetID = 1
      [0x00 0x03] "a/b"     # topic filter
      [0x00]                # subscription opts = QoS 0

read [0x90 0x02]            # fixed header
     [0x00]                 # property length
     [0x00]                 # reason code
